<?xml version="1.0" encoding="UTF-8"?>
<!--servlet 2.4比较老了，现在的是servlet 3.1 ,xsd文件定义了该xml的所有相关节点元素-->
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd
                            "
        >
    <!--标准配置-->
    <display-name>Your SpringMVC Name for Some Console Platform</display-name>
    <description>Your SpringMVC Function Desc</description>

    <!--设置Spring的初始化文件，支持通配符：比如：classpath:**/appcontext-*.xml-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <!--param-value中填入具体的自定义初始化文件的位置，就是初始实例化相关的业务bean-->
        <param-value>mdpaygate-root-context.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextCleanupListener</listener-class>
    </listener>

    <!--设置日志初始化文件，一般固定不变-->
    <context-param>
        <param-name>logbackConfigLocation</param-name>
        <param-value>WEB-INF/classes/logback.xml</param-value>
    </context-param>
    <!--需要引入logback-ext-spring组件,在springMVC框架上启动日志监听-->
    <listener>
        <listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
    </listener>

    <!--固有的字符filter编码处理-->
    <filter>
        <filter-name>chEncodeFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>chEncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
